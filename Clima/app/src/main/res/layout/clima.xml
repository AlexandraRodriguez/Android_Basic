<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ClimaCiudad"
    android:weightSum="7">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:layout_margin="10dp"
        android:layout_weight="6">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Ciudad"
            android:layout_gravity="right"
            android:id="@+id/ciudad_actual"
            android:layout_weight="1" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="FechaActual"
            android:layout_gravity="right"
            android:id="@+id/fecha_actual"
            android:layout_weight="1" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:layout_weight="1"
        android:weightSum="5">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:id="@+id/tempActual"
            android:text="GC"
            android:textSize="65dp"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:layout_weight="2" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:id="@+id/descripcion"
            android:text="Nublado"
            android:textSize="30dp"
            android:layout_gravity="center"
            android:layout_weight="2" />
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="1">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="tempMax"
                    android:id="@+id/tempMax"
                    android:gravity="center"
                    android:layout_margin="10dp"
                    android:textSize="20dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="tempMin"
                    android:layout_margin="10dp"
                    android:id="@+id/tempMin"
                    android:textSize="20dp"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="humedad"
                    android:id="@+id/humedad"
                    android:layout_margin="10dp"
                    android:textSize="20dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="presion"
                    android:layout_margin="10dp"
                    android:id="@+id/presion"
                    android:textSize="20dp"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Actualizar"
                    android:id="@+id/actualizar" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>


</LinearLayout>