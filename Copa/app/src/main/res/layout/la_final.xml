<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Final"
        android:gravity="center"
        android:textSize="30sp"
        android:layout_margin="10dp"/>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="4"
        android:layout_margin="10dp">


        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="P"
            android:id="@+id/btnPreliminares"
            android:layout_weight="1"
            android:layout_marginRight="10dp"/>

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="C"
            android:id="@+id/btnCuartos"
            android:layout_weight="1"
            android:layout_marginRight="10dp"/>

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="S"
            android:id="@+id/btnSemifinales"
            android:layout_weight="1"
            android:layout_marginRight="10dp"/>

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="F"
            android:id="@+id/btnFinal"
            android:layout_weight="1"/>
    </LinearLayout>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Resultado"
        android:textSize="25sp"
        android:gravity="center"
        android:background="@color/red"
        android:textColor="@color/white"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3"
        android:layout_marginTop="35dp">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/textFinal1"
            android:layout_weight="1"
            android:textSize="20sp"
            android:padding="5dp"
            android:layout_margin="5dp"
            android:gravity="center"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/textFinalRes"
            android:layout_weight="1"
            android:background="@color/light_red"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:padding="5dp"
            android:layout_margin="5dp"
            android:gravity="center"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/textFinal2"
            android:layout_weight="1"
            android:textSize="20sp"
            android:padding="5dp"
            android:layout_margin="5dp"
            android:gravity="center"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Ganador"
            android:textSize="25sp"
            android:gravity="center"
            android:background="@color/red"
            android:textColor="@color/white"
            android:layout_marginBottom="30dp"/>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:padding="10dp"
            android:text="New Text"
            android:id="@+id/textGanador"
            android:textSize="25sp"
            android:gravity="center"
            android:background="@color/dark_blue"/>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="horizontal"
            android:gravity="bottom"
            android:weightSum="2">

            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Jugar de nuevo"
                android:id="@+id/btnJugar"
                android:onClick="startMain"
                android:layout_weight="1"/>
            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Terminar"
                android:id="@+id/btnTerminar"
                android:onClick="finishFinal"
                android:layout_weight="1"/>

        </LinearLayout>


    </LinearLayout>




</LinearLayout>